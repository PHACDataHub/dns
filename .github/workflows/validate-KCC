name: kubeconform
on:
  push:
    tags:
      - v*
    branches:
      - master
      - main
  pull_request:
permissions:
  contents: read
jobs:
  test:
    name: test
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: check manifests
        uses: hermanbanken/kubeconform-action@v1
        with:
          options: ["-output", "json", "fixtures/invalid.yaml"]
